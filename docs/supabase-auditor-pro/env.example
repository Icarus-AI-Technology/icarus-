# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_PROJECT_ID=your-project-id

# Optional: Database connection (para uso direto sem Supabase SDK)
SUPABASE_DB_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Audit Configuration
AUDIT_MODE=safe
AUDIT_OUTPUT_DIR=./reports
AUDIT_SEVERITY_FILTERS=CRÍTICO,ALTO,MÉDIO,BAIXO,INFO

# Optional: Notifications
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATION=admin@exemplo.com

# Optional: Scheduling
ENABLE_SCHEDULED_AUDITS=false
AUDIT_SCHEDULE_CRON=0 3 * * *

